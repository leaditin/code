{
  "name": "leaditin/code",
  "description": "Provides an API to easy generate PHP code",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "code",
    "generator",
    "code generator"
  ],
  "authors": [
    {
      "name": "Igor Vuckovic",
      "email": "igor@vuckovic.biz"
    }
  ],
  "minimum-stability": "beta",
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8.3",
    "friendsofphp/php-cs-fixer": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Leaditin\\Code\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Leaditin\\Code\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "cs-fix": "php-cs-fixer fix --config=.php_cs",
    "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
  }
}
